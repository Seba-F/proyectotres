<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.series.any? %>
        <h3>series (<%= @user.series.count %>)</h3>
        <ol class="series">
          <%= render @series %>
        </ol>
        <%= will_paginate @series %>
    <% end %>
  </div>

 <!--## aqui borre codigo de los micropost, igual al que esta arriba pero con microposts en vez de series-->

</div>